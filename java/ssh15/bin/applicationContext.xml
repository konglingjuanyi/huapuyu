		<property name="testOnBorrow" value="false" />
		<property name="testOnReturn" value="false" />
		<property name="poolPreparedStatements" value="true" />
		<property name="maxPoolPreparedStatementPerConnectionSize" value="100" />
	</bean>   
	
	<bean id="dataSource5" class="com.alibaba.druid.pool.DruidDataSource" init-method="init" destroy-method="close">
		<property name="url" value="${db2.slave1.url}" />
		<property name="username" value="${db2.slave1.username}" />
		<property name="password" value="${db2.slave1.password}" />
		<property name="driverClassName" value="${db2.slave1.driver}" />
		<property name="initialSize" value="3" />
		<property name="minIdle" value="3" />
