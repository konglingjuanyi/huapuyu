	<bean id="atom4" class="com.vip.venus.jdbc.atom.AtomDataSource">
		<property name="targetDataSource" ref="dataSource4" />
		<property name="rules" ref="ruleList" />
	</bean>
	<bean id="atom5" class="com.vip.venus.jdbc.atom.AtomDataSource">
		<property name="targetDataSource" ref="dataSource5" />
		<property name="rules" ref="ruleList" />
	</bean>
	<bean id="atom6" class="com.vip.venus.jdbc.atom.AtomDataSource">
		<property name="targetDataSource" ref="dataSource6" />
		<property name="rules" ref="ruleList" />
	</bean>
	
	<bean id="group2" class="com.vip.venus.jdbc.group.GroupDataSource">
		<property name="targetDataSources">
			<map key-type="java.lang.String">
				<entry key="write" value-ref="atom4" />
				<entry key="read01" value-ref="atom5" />
				<entry key="read02" value-ref="atom6" />
			</map>
		</property>
		<property name="lbStrategy" ref="roundRobinLoadBalanceStrategy" />
		<property name="rules" ref="ruleList" />
	</bean>
	
	<bean id="roundRobinLoadBalanceStrategy" class="com.vip.venus.jdbc.group.strategy.RoundRobinLoadBalanceStrategy">
		<constructor-arg>
			<map key-type="java.lang.String" value-type="java.lang.Integer">
				<entry key="read01" value="1" />
				<entry key="read02" value="1" />
			</map>
		</constructor-arg>
	</bean>
	
	<bean id="randomLoadBalanceStrategy" class="com.vip.venus.jdbc.group.strategy.RandomLoadBalanceStrategy">
		<constructor-arg>
			<list>
				<value>read01</value>
				<value>read02</value>
			</list>
		</constructor-arg>
	</bean>
	
	<bean id="dataSource" class="com.vip.venus.jdbc.matrix.MatrixDataSource">
		<property name="targetDataSources">   
			<map>  
                <entry key="ds1">  
                    <ref bean="group1" />  
                </entry>  
                <entry key="ds2">  
                    <ref bean="group2" />  
                </entry> 
            </map> 
    	</property>
    	<property name="rules" ref="ruleList" />
	</bean>
	
	<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="basePackage" value="com.vip.jdbc.test.repository" />
		<property name="sqlSessionFactoryBeanName" value="msqlSessionFactory" />
	</bean>

	<bean id="msqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="typeAliasesPackage" value="com.vip.jdbc.test.entity" />
		<property name="mapperLocations" value="classpath*:com/vip/jdbc/test/mapper/*Mapper.xml" />
	</bean>
	
	<context:component-scan base-package="com.vip.jdbc.test.service" />
	<context:component-scan base-package="com.vip.jdbc.test.repository" />
	
	<bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<tx:annotation-driven transaction-manager="transactionManager"/>
	
</beans>
