<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
  <class table="t_person" name="com.anders.hibernate.model.maifang.Person">
    <comment>"人"</comment>
    <id name="id">
      <column name="ID">
        <comment>标识</comment>
      </column>
      <generator class="native"/>
    </id>
    <property name="name" length="50" not-null="true" type="string">
      <column name="MZ">
        <comment>名字</comment>
      </column>
    </property>
    <property name="age" not-null="true" type="integer">
      <column name="NL">
        <comment>年龄</comment>
      </column>
    </property>
  </class>
</hibernate-mapping>
