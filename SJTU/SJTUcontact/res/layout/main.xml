<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/bg">
	
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:background="@drawable/bg"
			android:layout_weight="8"
			>
			
		<Button android:id="@+id/backToGroup" android:layout_width="40dip"
			android:layout_height="40dip" android:text="@string/backToGroup" android:paddingTop="10dip"/>
			
		<EditText android:text="@string/searchArea" android:id="@+id/searchArea"
			android:layout_width="180dip" android:layout_height="50dip" 
			android:textColor="#FF0000" android:paddingTop="10dip"></EditText>

		<Button android:id="@+id/submitId" android:layout_width="50dip"
			android:layout_height="40dip" android:text="@string/submit" android:paddingTop="10dip" />
			
		<Button android:id="@+id/add" android:layout_width="40dip"
			android:layout_height="40dip" android:text="@string/add" android:paddingTop="10dip"/>

		</LinearLayout>
	
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="vertical" android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:background="@drawable/bg"
				android:layout_weight="2"
			>
		<ListView android:id="@id/android:list" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
		</ListView>
		</LinearLayout>
</LinearLayout>