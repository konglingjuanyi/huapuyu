<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC 
	"-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" 
	"http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
	<data-sources />
	<form-beans>
		<form-bean name="loginForm" type="form.LoginForm" />
		<form-bean name="userDisplayForm" type="form.UserDisplayForm" />
	</form-beans>

	<global-exceptions />

	<global-forwards>
		<forward name="logoff" path="/logoff.do" />
		<forward name="logon" path="/logon.jsp" />
		<forward name="success" path="/masterpage.jsp" />
		<forward name="usersearch" path="/usersearch.jsp" />
		<forward name="userdisplay" path="/userdisplay.do" />
		<forward name="userinsert" path="/userinsert.jsp" />
		<forward name="masterpage" path="/masterpage.jsp" />
		<forward name="msg" path="/msg.jsp" />
	</global-forwards>

	<action-mappings>
		<action attribute="loginForm" input="/login.jsp"
			name="loginForm" path="/login" scope="request" validate="true"
			type="action.LoginAction">
			<forward name="success" path="/masterpage.jsp" />
			<forward name="failure" path="/login.jsp" />
		</action>

		<action path="/logoff" type="action.LogoffAction"
			validate="false">
			<forward name="success" path="/login.jsp" />
		</action>

		<action attribute="userDisplayForm" input="/userdisplay.jsp"
			name="userDisplayForm" path="/userdisplay" scope="request"
			type="action.UserDisplayAction" validate="false">
			<forward name="success" path="/userdisplay.jsp" />
		</action>
	</action-mappings>

	<controller processorClass="system.EncodingProcessor" />

	<message-resources parameter="struts.ApplicationResources" />
</struts-config>

