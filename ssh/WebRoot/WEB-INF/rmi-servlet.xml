<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="andersRmi" class="com.anders.ssh.rmi.impl.AndersRmiImpl" />

	
	 
	<!-- Spring支持3种基于Http协议的远程调用 -->
	<!-- Hessian和Burlap是私有协议，没有成为标准 -->
	<!-- Hessian，二进制协议 -->
	<bean name="/hessianInvoker" class="org.springframework.remoting.caucho.HessianServiceExporter">
		<property name="service" ref="andersRmi" />
	 	<property name="serviceInterface" value="com.anders.ssh.rmi.AndersRmi" />
	</bean>
	 
	<!-- Burlap，基于XML的协议 -->
	<bean name="/burlapInvoker" class="org.springframework.remoting.caucho.BurlapServiceExporter">
		<property name="service" ref="andersRmi" />
	 	<property name="serviceInterface" value="com.anders.ssh.rmi.AndersRmi" />
	</bean>
	 
	<!-- Http Invoker，使用Java标准的序列化机制，通过Http实现远程调用 -->
	<bean name="/httpInvoker" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
		<property name="service" ref="andersRmi" />
	 	<property name="serviceInterface" value="com.anders.ssh.rmi.AndersRmi" />
	</bean>
</beans>
