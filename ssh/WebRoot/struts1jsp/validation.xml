<?xml version="1.0" encoding="utf-8" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.0//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_2_0.dtd">

<!--
    Validation Rules for the Struts Example Web Application
    
    $Id: validation.xml,v 1.1 2010/04/21 05:32:14 GG-xuan.chi Exp $
-->

<form-validation>
    <global>
        <!-- 英数字 26个字母和数字 -->
        <constant>
            <constant-name>name</constant-name>
            <constant-value>^[a-zA-Z0-9_\.\s\(\)]+$</constant-value>
        </constant>
    </global>
      <formset>
		<form name="LearnValidatorForm">
			<field property="name" depends="required,mask">
				<msg name="required" key="errors.required" />
				<msg name="mask" key="errors.mask.name" />
				<arg0 key="parameter.o" />
	            <var>
	          		<var-name>mask</var-name>
	          		<var-value>${name}</var-value>
	            </var>
			</field>
		 	<field property="passWord" depends="required,maxlength">
		 		<msg name="required" key="errors.required" />
       			<msg name="maxlength" key="errors.maxlength" />
        		<arg0 name="maxlength" key="${var:maxlength}" resource="false" />
        		<var>
          		<var-name>maxlength</var-name>
          		<var-value>1</var-value>
        		</var>
		 	</field>
		</form>
      </formset>
</form-validation>
