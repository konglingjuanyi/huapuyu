<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="User">

  <typeAlias alias="User" type="model.test.Tb_user"/>

  <resultMap id="userMap" class="User">
    <result property="id" column="id"/>
    <result property="name" column="name"/>
    <result property="pwd" column="pwd"/>
  </resultMap>

  <select id="userGetAll" resultMap="userMap">
    SELECT id, name, pwd FROM tb_user
  </select>

  <select id="userGetById" parameterClass="int" resultClass="User">
    SELECT id, name, pwd FROM tb_user WHERE id = #id#
  </select>
   
  <insert id="userInsert" parameterClass="User">
    INSERT INTO tb_user (id, name, pwd) VALUES (#id#, #name#, #pwd#)
  </insert>

  <update id="userUpdate" parameterClass="User">
    UPDATE tb_user SET name = #name#, pwd = #pwd# WHERE id = #id#
  </update>

  <delete id="userDeleteById" parameterClass="int">
    DELETE FROM tb_user WHERE id = #id#
  </delete>
  
  <delete id="userDelete" parameterClass="User">
    DELETE FROM tb_user WHERE id = #id#
  </delete>

</sqlMap>