<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="Data">

  <typeAlias alias="Data" type="com.anders.ssh.model.xml.Data"/>

  <resultMap id="dataMap" class="Data">
    <result property="id" column="id"/>
    <result property="name" column="name"/>
    <result property="type" column="type"/>
    <result property="enable" column="enable"/>
  </resultMap>

  <select id="dataGetAll" resultMap="dataMap">
    SELECT id, name, type, enable FROM cfg_data
  </select>

  <select id="dataGetById" parameterClass="Integer" resultClass="Data">
    SELECT id, name, type, enable FROM cfg_data WHERE id = #id#
  </select>
   
  <insert id="dataSave" parameterClass="Data">
    INSERT INTO cfg_data (id, name, type, enable) VALUES (#id#, #name#, #type#, #enable#)
  </insert>

  <update id="dataUpdate" parameterClass="Data">
    UPDATE cfg_data SET name = #name#, type = #type# WHERE id = #id#
  </update>

  <delete id="dataDeleteById" parameterClass="Integer">
    DELETE FROM cfg_data WHERE id = #id#
  </delete>
  
  <delete id="dataDelete" parameterClass="Data">
    DELETE FROM cfg_data WHERE id = #id#
  </delete>

</sqlMap>