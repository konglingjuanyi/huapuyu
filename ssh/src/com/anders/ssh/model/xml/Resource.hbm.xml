<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="model">

	<class name="Resource" table="tb_resource">
		<id name="id" column="id">
			<generator class="native"/>
		</id>

		<property name="type" column="type" type="string" not-null="true" length="50"/>
		<property name="url" column="url" type="string" not-null="true" length="50"/>
		<property name="name" column="name" type="string" not-null="true" length="50"/>
		<property name="enable" column="enable" type="boolean" not-null="true"/>
		
		<set name="roleSet" table="tb_role_resource_relation" lazy="false">  
        	<key column="resource_id"/>
        	<many-to-many class="Role" column="role_id"/>  
    	</set> 
	</class>

</hibernate-mapping>