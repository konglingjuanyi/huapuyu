<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMapConfig PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-config-2.dtd">

<sqlMapConfig>

	<!--  
	在sqlConfig.properties文件中配置数据库连接信息
	<properties resource="jdbc.properties"/>
	
	jdbc.properties中的具体内容如下：
	driver=oracle.jdbc.driver.OracleDriver
	url=jdbc:oracle:thin:@127.0.0.1:1521:oracle9i
	username=ssh
	password=123
	
	<transactionManager type="JDBC" commitRequired="false">
    	<dataSource type="SIMPLE">
	      	<property name="JDBC.Driver" value="oracle.jdbc.driver.OracleDriver"/>
	      	<property name="JDBC.ConnectionURL" value="jdbc:oracle:thin:@127.0.0.1:1521:oracle9i"/>
	      	<property name="JDBC.Username" value="ssh"/>
	      	<property name="JDBC.Password" value="123"/>
    	</dataSource>
    	<dataSource type="SIMPLE">
	      	<property name="JDBC.Driver" value="${driver}"/>可以通过${}的形式引用sqlConfig.properties文件中相关配置信息
	      	<property name="JDBC.ConnectionURL" value="${url}"/>
	      	<property name="JDBC.Username" value="${username}"/>
	      	<property name="JDBC.Password" value="${password}"/>
    	</dataSource>
	</transactionManager>
	-->

	<!-- 下面这种形式会报错
	<sqlMap resource="classpath:com/anders/ssh/ibatis/Tb_user.xml"/>会报错 
	-->
	<sqlMap resource="com/anders/ssh/ibatis/ibatis-data.xml"/>

</sqlMapConfig>