<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
"http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>

 <!-- forms -->
 <form-beans>
  <form-bean name="loginForm" type="struts.one.form.LoginForm"/>
 </form-beans>

 <action-mappings>
  <action path="/LoginAction" input="/index-Struts1.jsp"  type="struts.one.action.LoginAction" scope="request"
   name="loginForm" validate="true">
   		<forward name="submit" path="/submit-Struts1.jsp"/>
   		<forward name="error" path="/error-Struts1.jsp"/>
  </action>
 </action-mappings>
</struts-config>